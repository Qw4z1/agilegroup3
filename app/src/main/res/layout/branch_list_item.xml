<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    android:padding="10dp" >


    <TextView
        android:id="@+id/branch_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        style="@style/InfoListItems"/>

     <TextView
         android:id="@+id/branch_lastauthor"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/branch_name"
         android:layout_alignParentLeft="true"
         android:text="LastAuthor"
         style="@style/InfoListItems.Secondary" />

    <TextView
        android:id="@+id/branch_lastupdated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/branch_lastauthor"
        android:text="LastUpdated"
        style="@style/InfoListItems.Secondary" />


</RelativeLayout>