<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    android:padding="10dp" >


    <TextView
        android:id="@+id/commit_message_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="name"
        style="@style/InfoListItems" />

     <TextView
         android:id="@+id/commit_message_totalChanges"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/commit_message_name"
         android:layout_alignParentLeft="true"
         android:text="Total Changes"
         style="@style/InfoListItems.Secondary" />

    <TextView
        android:id="@+id/commit_message_deletions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/commit_message_name"
        android:text="Detetions"
        style="@style/InfoListItems.Secondary"
        android:layout_marginRight="80dp" />

    <TextView
        android:id="@+id/commit_message_updates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/commit_message_name"
        android:text="Updates"
        style="@style/InfoListItems.Secondary" />

</RelativeLayout>