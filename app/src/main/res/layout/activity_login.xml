<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">


    <EditText
        android:layout_width="@dimen/login_widget_width"
        android:layout_height="wrap_content"
        android:hint="@string/username_hint"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/login_username_edittext"/>


    <EditText
        android:layout_width="@dimen/login_widget_width"
        android:layout_height="wrap_content"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:layout_below="@+id/login_username_edittext"
        android:id="@+id/login_password_edittext"
        />


    <Button
        android:layout_width="@dimen/login_widget_width"
        android:layout_height="wrap_content"
        android:text="@string/login_button"
        android:id="@+id/login_button"
        android:layout_below="@+id/login_password_edittext"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="@dimen/login_widget_width"
        android:layout_height="wrap_content"
        android:text="@string/login_forgot_password"
        android:id="@+id/login_forgot_password_button"
        android:layout_below="@+id/login_button"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="@dimen/login_widget_width"
        android:layout_height="@dimen/login_widget_width"
        android:id="@+id/imageView"
        android:src="@drawable/ic_github_logo"
        android:layout_above="@+id/login_username_edittext"
        android:layout_alignLeft="@+id/login_username_edittext"
        android:layout_alignStart="@+id/login_username_edittext"
        android:layout_alignRight="@+id/login_username_edittext"
        android:layout_alignEnd="@+id/login_username_edittext"/>
</RelativeLayout>